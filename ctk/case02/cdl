intent CREATE_USER
goal: "Create a new user account"
inputs: "[person: string, password: string]"
outputs: "[userId: string, createdAt: string]"
end

intent PURCHASE_PRODUCT
goal: "Purchase a product"
inputs: "[userId: string, productId: string, quantity: int]"
outputs: "[orderId: string, totalPrice: string]"
end

mapping CREATE_USER -> "api POST /api/users"
request: "CreateUserRequest"
response: "CreateUserResponse"
end

mapping PURCHASE_PRODUCT -> "api POST /api/orders"
request: "PurchaseRequest"
response: "PurchaseResponse"
end
